  <%= form_for @article do |f| %>
  <% if @article.errors.any? %>
  <div class="container">
    <div id="error-explanation" class=" alert alert-danger" role="alert">
      <%= pluralize(@article.errors.count, "error") %> prevented this article
      from being saved:
      <ul>
        <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
  <div class="container">
    <p><%= f.text_field :title, placeholder: "Title", class: "form-control" %></p>
    <p><%= f.text_area :body, placeholder: "Body", class: "form-control" %></p>
    <p><%= f.submit class: "btn btn-primary" %></p>
  </div>
<% end %> 

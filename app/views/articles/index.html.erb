<div class="container">
  <h1>Articles</h1>

  <% @articles.each do |article| %>
  <h2><%= article.title %></h2>
  <%= link_to "New", new_article_path %>
  <p><%= article.body %></p>
  <%= link_to "Read", article_path(article) %>
  <%= link_to "Edit", edit_article_path(article) %>
  <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?"} %>
  <% end %>
</div>
